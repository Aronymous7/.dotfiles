# monitor brightness
XF86MonBrightness{Up,Down}
	xbacklight {-inc 10,-dec 10}

# change/mute volume
XF86Audio{Raise,Lower}Volume
	amixer -M set Master {5%+,5%-} 1>/dev/null
XF86AudioMute
	amixer set Master toggle 1>/dev/null

# lock screen
super + shift + x
	i3lock -n -c 000000

# launch programs
super + s
	dmenu_run
super + Return
	$TERMINAL -- tmux
super + b
	$BROWSER
super + n
	$CALENDAR
super + m
	$MAIL
